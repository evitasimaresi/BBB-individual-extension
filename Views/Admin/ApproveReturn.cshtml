@model List<BBB.Models.BoardGameUser>

@{
    ViewData["Title"] = "Pending Borrow Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="game-upload-page-title">@ViewData["Title"]</h2>

<div class="game-upload-form requests-container">
    @foreach (var request in Model)
    {
        <section class="request-card">
            <div class="request-details">
                <div><strong>Board Game:</strong> @request.BoardGame.Title</div>
                <div><strong>User:</strong> @request.User.Username</div>
                <div><strong>Borrow Date:</strong> @request.BorrowDate:yyyy-MM-dd</div>
                <div><strong>Return Date:</strong> @(request.ReturnDate?.ToString("yyyy-MM-dd") ?? "-")</div>
                <div><strong>Status:</strong> @request.BoardGame.Status.Name</div>
            </div>
        </section>
    }
</div>